generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Media {
  id        String   @id @default(uuid())
  key       String
  source    String
  type      String
  ext       String
  size      String
  sizeRaw   Int
  status    String   @default("published")
  createdAt DateTime @default(now())
  upatedAt  DateTime @default(now())
  project   String   @default("vergefresh")
}

model Page {
  id        String   @id @default(uuid())
  route     String
  status    String
  entry     String
  createdAt DateTime @default(now())
  upatedAt  DateTime @default(now())
  project   String   @default("vergefresh")
}

model User {
  id       String    @id @default(uuid())
  sessions Session[]
  role     Role      @default(BASIC)
  email    String    @unique
  password Password?
}

model Session {
  id        String   @id
  userId    String
  expiresAt DateTime
  user      User     @relation(references: [id], fields: [userId], onDelete: Cascade)
}

model Password {
  id             Int    @id @default(autoincrement())
  hashedPassword String
  userId         String @unique
  user           User   @relation(references: [id], fields: [userId], onDelete: Cascade)

  @@index([userId])
}

enum Role {
  BASIC
  SUPPORT
  EDITOR
  ADMIN
  SUPERADMIN
}
